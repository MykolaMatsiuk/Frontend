body
  position relative
  margin 0
  padding 0
  font-family sans-serif
.inp
  margin 5px
.search-cart
  width 343px
  .cart
    width 157px
    margin 5px
    padding 2px
    float right
    color #060059
    background-color aquamarine
    text-align center
.item
  float left
  width 150px
  margin 5px
  padding 5px
  border 1px solid #C9C7C7
  .desc
    margin 5px
    color #010141
    background-color #E1F7FD
    border 1px solid #04C3D4
    &:hover
      color #fff
      background-color #04C3D4
      cursor pointer
  .buy
    margin 5px
    color #002200
    background-color #89F886
    border 1px solid #02890C
    &:hover
      color #fff
      background-color #02890C
      cursor pointer
.modal
  display block
  position fixed
  z-index 1
  left 0
  top 0
  width 100%
  height 100%
  overflow auto
  background-color rgba(0,0,0,0.4)
  .modal-content
    background-color #fefefe
    margin 15% auto
    padding 20px
    border 1px solid #888
    width 80%
    button
      float right
      color #aaa
      &.yes, &.no
        float none
        margin-right 5px
        color #6E6E6E
